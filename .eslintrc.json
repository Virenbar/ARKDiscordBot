{
    "env": {
        "es2021": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/type-annotation-spacing": "warn",
        "space-in-parens": "warn",
        "quotes": "warn",
        "eol-last": "warn",
        "semi": "warn",
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1
            }
        ],
        "lines-around-comment": [
            "warn",
            {
                "beforeLineComment": true
            }
        ]
    }
}