{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}